#!/usr/bin/env ruby

require 'thor'
require_relative '../installer/file_installer'
require_relative '../installer/zsh'
require_relative '../installer/vim_installer'
require_relative '../installer/homebrew_installer'

class Dotfiles < Thor
  desc 'Install the dotfiles', ''
  method_options :compile => :boolean
  def install
    FileInstaller.new(options).install!
    HomeBrewInstaller::new(options).install!
    Zsh::new.install!
    VimInstaller.new(options).install!
  end
end

Dotfiles.start(ARGV)
